# ============================================
# DJANGO CORE SETTINGS
# ============================================

# Secret key for cryptographic signing
# Generate a new one: openssl rand -base64 64
DJANGO_SECRET_KEY=change-me-to-a-very-long-random-string-at-least-50-chars

# Debug mode (True for development, False for production)
DJANGO_DEBUG=True

# Comma-separated list of allowed hostnames
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Django settings module to use
DJANGO_SETTINGS_MODULE=api.settings.development

# ============================================
# DATABASE CONFIGURATION (PostgreSQL)
# ============================================

# PostgreSQL database name
DB_NAME=my_django_db

# PostgreSQL username
DB_USER=my_django_user

# PostgreSQL password (change this!)
DB_PASSWORD=change-this-to-a-strong-password

# PostgreSQL host (service name in docker-compose)
DB_HOST=db

# PostgreSQL port
DB_PORT=5432

# Alternative: Full database URL
# DATABASE_URL=postgresql://my_django_user:password@db:5432/my_django_db

# ============================================
# CORS CONFIGURATION
# ============================================

# Allow all origins (development only)
CORS_ALLOW_ALL_ORIGINS=True

# Or specify allowed origins (comma-separated)
# CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============================================
# OPTIONAL: PGADMIN (Database administration)
# ============================================

# PgAdmin email for web interface
PGADMIN_EMAIL=admin@admin.com

# PgAdmin password for web interface
PGADMIN_PASSWORD=admin123

# ============================================
# OPTIONAL: SUPERUSER CREATION (Development)
# ============================================

# Auto-create superuser on startup (development only)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=admin123

# ============================================
# OPTIONAL: SECURITY SETTINGS
# ============================================

# CSRF trusted origins
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Timezone
TZ=Africa/Douala
